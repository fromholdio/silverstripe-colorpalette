<li class="ColorPaletteField__color $Class">
    <input class="ColorPaletteField__input"
           id="$ID"
           name="$Name"
           type="hidden"
           value="$InputValue" />
    <label class="ColorPaletteField__label"
           for="$ID"
           style="background: {$AttrValue};"
    ></label>
</li>
